@model EMiningLicense.Models.StaffDashboardVm
@{
    ViewBag.Title = "Staff Dashboard - E-Mining License Platform";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-success"><i class="fas fa-user-tie"></i> Staff Dashboard</h2>
        <a href="@Url.Action("Profile", "Staff")" class="btn btn-success">
            <i class="fas fa-user-cog"></i> Edit Profile
        </a>
    </div>

    <!-- Notifications -->
    <div class="alert alert-success">
        <h5><i class="fas fa-bell"></i> Notifications</h5>
        <ul class="mb-0">
            @foreach (var note in Model.Notifications)
            {
                <li>@note</li>
            }
        </ul>
    </div>
</div>

    <!-- Assigned Applications -->
    <div class="card shadow mb-4">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-clipboard-list"></i> Assigned Applications</h5>
            <a href="#" class="btn btn-light btn-sm"><i class="fas fa-plus-circle"></i> New Assignment</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-success">
                        <tr>
                            <th>Applicant</th>
                            <th>License Type</th>
                            <th>Status</th>
                            <th>Submitted At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var app in Model.AssignedApplications)
                        {
                            <tr>
                                <td>@app.ApplicantName</td>
                                <td>@app.LicenseType</td>
                                <td>
                                    <span class="badge @(app.Status == "Approved" ? "bg-success" : "bg-warning text-dark")">
                                        @app.Status
                                    </span>
                                </td>
                                <td>@app.SubmittedAt.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a href="@Url.Action("Review", "Staff", new { id = app.Id })" class="btn btn-sm btn-success">
                                        <i class="fas fa-check-circle"></i> Review
                                    </a>
                                    <a href="@Url.Action("Details", "Staff", new { id = app.Id })" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
