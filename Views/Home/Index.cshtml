@{
    ViewData["Title"] = "Welcome";
}
<div class="container-fluid p-0">

    <!-- Hero Section -->
    <section class="bg-dark text-white text-center d-flex align-items-center" style="height: 90vh; background: linear-gradient(rgba(0,0,0,.5), rgba(0,0,0,.7)), url('/images/mining-bg.jpg') center/cover no-repeat;">
        <div class="container">
            <h1 class="display-3 fw-bold mb-3">E-Mining License Platform</h1>
            <p class="lead mb-4">Apply, manage, and renew your mining licenses online — secure, fast, and transparent.</p>
            <div>
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg me-3">Register</a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">Login</a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5 bg-light text-center">
        <div class="container">
            <h2 class="fw-bold mb-5">Platform Features</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <i class="bi bi-file-earmark-text display-4 text-primary mb-3"></i>
                            <h5 class="card-title">Online Applications</h5>
                            <p class="card-text">Submit new mining license requests and renewals directly from your dashboard.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <i class="bi bi-credit-card2-front display-4 text-success mb-3"></i>
                            <h5 class="card-title">Secure Payments</h5>
                            <p class="card-text">Pay license fees safely using TeleBirr and get instant confirmation.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <i class="bi bi-patch-check display-4 text-info mb-3"></i>
                            <h5 class="card-title">Digital Certificates</h5>
                            <p class="card-text">Download tamper-proof certificates with QR code verification anytime.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="py-5">
        <div class="container text-center">
            <h2 class="fw-bold mb-4">Why E-Mining?</h2>
            <p class="lead mb-0">We streamline the mining licensing process, reduce bureaucracy, and enhance transparency between applicants and the mining authority.</p>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container text-center">
            <p class="mb-1">&copy; @DateTime.Now.Year Mining Authority – All Rights Reserved</p>
            <small>Contact: info@mining.gov | +251 11 123 4567</small>
        </div>
    </footer>
</div>
