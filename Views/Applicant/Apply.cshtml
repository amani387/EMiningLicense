@model EMiningLicense.Models.LicenseApplication
@{
    ViewBag.Title = "New License Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2><i class="fas fa-plus-circle"></i> New License Application</h2>
    <form asp-action="Apply" method="post" enctype="multipart/form-data">

        <!-- Company Info -->
        <div class="mb-3">
            <label asp-for="CompanyName" class="form-label"></label>
            <input asp-for="CompanyName" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="ContactPerson" class="form-label"></label>
            <input asp-for="ContactPerson" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="ContactEmail" class="form-label"></label>
            <input asp-for="ContactEmail" class="form-control" type="email" required />
        </div>
        <div class="mb-3">
            <label asp-for="ContactPhone" class="form-label"></label>
            <input asp-for="ContactPhone" class="form-control" required />
        </div>

        <!-- Mining Info -->
        <div class="mb-3">
            <label asp-for="MiningType" class="form-label"></label>
            <select asp-for="MiningType" class="form-control">
                <option>Gold</option>
                <option>Coal</option>
                <option>Quarry</option>
                <option>Other</option>
            </select>
        </div>
        <div class="row mb-3">
            <div class="col">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
            </div>
        </div>

        <!-- GIS Location -->
        <div class="mb-3">
            <label>Location</label>
            <div id="map" style="height: 300px;"></div>
            <input type="hidden" asp-for="Latitude" id="Latitude" />
            <input type="hidden" asp-for="Longitude" id="Longitude" />
        </div>

        <!-- Upload Docs -->
        <div class="mb-3">
            <label class="form-label">Supporting Documents (PDF/JPG/PNG)</label>
            <input type="file" name="document" class="form-control" accept=".pdf,.jpg,.jpeg,.png" required />
        </div>

        <button type="submit" class="btn btn-success">
            <i class="fas fa-paper-plane"></i> Submit Application
        </button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        var map = L.map('map').setView([9.145, 40.4897], 6); // Ethiopia center
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: 'Map data © OpenStreetMap contributors'
        }).addTo(map);

        var marker;
        map.on('click', function (e) {
            if (marker) marker.remove();
            marker = L.marker(e.latlng).addTo(map);
            document.getElementById("Latitude").value = e.latlng.lat;
            document.getElementById("Longitude").value = e.latlng.lng;
        });
    </script>
}
