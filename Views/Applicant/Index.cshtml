@model IEnumerable<EMiningLicense.Models.LicenseApplication>
@{
    ViewBag.Title = "My Applications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="fas fa-briefcase"></i> My Applications
        </h2>
        <a class="btn btn-success shadow-sm" href="@Url.Action("Apply", "Applicant")">
            <i class="fas fa-plus-circle"></i> New Application
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body p-0">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Company</th>
                            <th scope="col">Mining Type</th>
                            <th scope="col">Status</th>
                            <th scope="col">Submitted At</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var app in Model)
                        {
                            <tr>
                                <td>@app.CompanyName</td>
                                <td>@app.MiningType</td>
                                <td>
                                    @if (app.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-hourglass-half"></i> Pending
                                        </span>
                                    }
                                    else if (app.Status == "Approved")
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle"></i> Approved
                                        </span>
                                    }
                                    else if (app.Status == "Rejected")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle"></i> Rejected
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@app.Status</span>
                                    }
                                </td>
                                <td>@app.SubmittedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-outline-primary me-1"
                                       href="@Url.Action("Details", "Applicant", new { id = app.Id })">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    @if (app.Status == "Approved")
                                    {
                                        <a class="btn btn-sm btn-outline-success"
                                           href="@Url.Action("Renew", "Applicant", new { id = app.Id })">
                                            <i class="fas fa-sync-alt"></i> Renew
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center shadow-sm">
            <i class="fas fa-info-circle"></i> You haven’t submitted any applications yet.
            <a href="@Url.Action("Apply", "Applicant")" class="alert-link">Apply now</a>.
        </div>
    }
</div>
