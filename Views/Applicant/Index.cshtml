@model IEnumerable<EMiningLicense.Models.LicenseApplication>
@{
    ViewBag.Title = "My Applications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2><i class="fas fa-briefcase"></i> My Applications</h2>
    <a class="btn btn-success mb-3" href="@Url.Action("Apply", "Applicant")">
        <i class="fas fa-plus-circle"></i> New Application
    </a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Application Type</th>
                <th>Status</th>
                <th>Submitted At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model)
            {
                <tr>
                    <td>@app.ApplicationType</td>
                    <td>@app.Status</td>
                    <td>@app.SubmittedAt.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
