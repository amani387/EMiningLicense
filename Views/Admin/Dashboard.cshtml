@model EMiningLicense.Models.AdminDashboardViewModel
@{
    ViewBag.Title = "Admin Dashboard - E-Mining License Platform";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["msg"] != null)
{
    <div class="alert alert-info">@TempData["msg"]</div>
}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold text-dark"><i class="fas fa-cogs"></i> Administrator Dashboard</h2>
            <p class="text-muted">Manage users, monitor applications, and oversee the system in one place.</p>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12 text-end">
            @Html.ActionLink("➕ Add Staff", "CreateStaff", "Admin", null, new { @class = "btn btn-primary" })
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card bg-gradient-info text-white shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase">Total Users</h6>
                        <h3 class="fw-bold">@Model.TotalUsers</h3>
                    </div>
                    <i class="fas fa-users fa-2x opacity-75"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-gradient-warning text-white shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase">Pending Approvals</h6>
                        <h3 class="fw-bold">@Model.PendingUserApprovals</h3>
                    </div>
                    <i class="fas fa-user-clock fa-2x opacity-75"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-gradient-success text-white shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase">Active Licenses</h6>
                        <h3 class="fw-bold">@Model.ActiveLicenses</h3>
                    </div>
                    <i class="fas fa-certificate fa-2x opacity-75"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-gradient-danger text-white shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase">System Alerts</h6>
                        <h3 class="fw-bold">@Model.SystemAlerts</h3>
                    </div>
                    <i class="fas fa-exclamation-triangle fa-2x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending User Approvals -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-user-check"></i> Pending User Approvals</h5>
                    <span class="badge bg-warning text-dark">@Model.PendingUsers.Count</span>
                </div>
                <div class="card-body table-responsive">
                    @if (Model.PendingUsers.Any())
                    {
                        <table class="table table-striped align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Organization</th>
                                    <th>Registration Date</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.PendingUsers)
                                {
                                    <tr>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td>@user.OrganizationName</td>
                                        <td>@user.RegistrationDate.ToString("dd/MM/yyyy")</td>
                                        <td class="text-center">
                                            <form asp-action="ApproveUser" asp-controller="Admin" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm btn-success me-1">
                                                    <i class="fas fa-check"></i> Approve
                                                </button>
                                            </form>

                                            <form asp-action="RejectUser" asp-controller="Admin" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger me-1">
                                                    <i class="fas fa-times"></i> Reject
                                                </button>
                                            </form>

                                            <a asp-action="UserDetails" asp-controller="Admin" asp-route-id="@user.Id" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted text-center">✅ No pending user approvals at the moment.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- System Overview -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Application Statistics</h5>
                </div>
                <div class="card-body">
                    <canvas id="applicationChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-list-alt"></i> Recent System Activities</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivities.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var activity in Model.RecentActivities)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-start">
                                    <div class="ms-2 me-auto">
                                        <div class="fw-bold">@activity.Action</div>
                                        <small class="text-muted">@activity.Description</small>
                                    </div>
                                    <small class="text-muted">@activity.Timestamp.ToString("HH:mm")</small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No recent activities.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Example Chart.js chart
        var ctx = document.getElementById('applicationChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Approved', 'Pending', 'Rejected'],
                datasets: [{
                    label: 'Applications',
                    data: [@Model.ActiveLicenses, @Model.PendingUserApprovals, 5], // replace "5" with rejected count later
                    backgroundColor: ['#28a745', '#ffc107', '#dc3545']
                }]
            }
        });
    </script>
}
