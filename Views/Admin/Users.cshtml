@model IEnumerable<EMiningLicense.Models.ApplicationUser>
@{
    ViewData["Title"] = "User Approvals";
}
<div class="container mt-5">
    <h2>User Approvals</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Full Name</th>
                <th>Phone</th>
                <th>Organization</th>
                <th>OTP Verified</th>
                <th>Approved</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FullName</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Organization</td>
                    <td>@(user.IsVerifiedByOtp ? "Yes" : "No")</td>
                    <td>@(user.IsApprovedByAdmin ? "Yes" : "No")</td>
                    <td>
                        @if (!user.IsApprovedByAdmin && user.IsVerifiedByOtp)
                        {
                            <form asp-action="Approve" asp-controller="Admin" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-success">Approve</button>
                            </form>
                        }
                        <form asp-action="Reject" asp-controller="Admin" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
